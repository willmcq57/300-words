{
	"manifest_version": 3,
	"name": "300 Words Manager",
	"version": "0.1.0",
	"description": "Send emails to preset contact lists and avoid duplicate sends per day.",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"permissions": ["storage", "identity"],
	"oauth2": {
		"client_id": "732085666543-u7mking33ls63k4f2a972d7mmeamjpcd.apps.googleusercontent.com",
		"scopes": [
			"https://www.googleapis.com/auth/gmail.send",
			"https://www.googleapis.com/auth/gmail.readonly",
			"https://www.googleapis.com/auth/userinfo.email"
